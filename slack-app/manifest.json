{
  "display_information": {
    "name": "TalkCRM",
    "description": "Voice AI assistant for Salesforce CRM",
    "background_color": "#4A154B",
    "long_description": "TalkCRM brings your Salesforce CRM to Slack. Get instant call summaries, search records with /crm commands, and ask questions using natural language @mentions. Stay updated with deal alerts and task reminders right in your channels."
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "TalkCRM",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/crm",
        "url": "https://tough-raccoon-796.convex.site/webhooks/slack/commands",
        "description": "Manage your Salesforce CRM",
        "usage_hint": "[search|pipeline|tasks|log|help] [query]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "redirect_urls": [
      "https://tough-raccoon-796.convex.site/api/slack/oauth/callback"
    ],
    "scopes": {
      "bot": [
        "app_mentions:read",
        "channels:join",
        "channels:read",
        "chat:write",
        "commands",
        "groups:read",
        "im:history",
        "im:read",
        "im:write",
        "users:read",
        "users:read.email"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://tough-raccoon-796.convex.site/webhooks/slack/events",
      "bot_events": [
        "app_mention",
        "message.im"
      ]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://tough-raccoon-796.convex.site/webhooks/slack/actions"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
